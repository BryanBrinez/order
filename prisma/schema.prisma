generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password      String
  creation_date DateTime @default(now())
  update_date   DateTime @updatedAt()
  Order         Order[]

  @@map("tb_user")
}

model Order {
  id          Int    @id @default(autoincrement())
  description String
  status      String @default("En preparaci√≥n")

  user   User @relation(fields: [userId], references: [id])
  userId Int

  creation_date DateTime @default(now())
  update_date   DateTime @updatedAt()

  @@map("tb_order")
}
